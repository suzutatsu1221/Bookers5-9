  <p id="notice"><%= notice %></p>

<div clas="container">
	<div class="row col-xs-offset-1">
		<div class="col-xs-3">
				<h2>User</h2>
				 <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "30×30", fallback: "no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
						   <th>name</th>
						   <th><%= @book.user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= current_user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<% if current_user.id %>
					<%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench
					 aria-hidden=true" %>
					 

					<% end %>
				</div>
				<h2>New book</h2>
				<!-- form_for部分 -->
				<%= form_for(@book_new) do |f| %>
				   <h4>Title</h4>
                   <%= f.text_field :title %>
                   <h4>Opinion</h4>
                   <%= f.text_area :body %>
                   <%= f.submit 'Create Book' %>
                <% end %>
				<!--form_for終わり -->
		</div>

		<div class="col-xs-7">
			<h2>Book detail</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
					</tr>
                    <tr>
                    	<td>
                     <%= link_to(user_path(@book.user)) do %>
                      <%= attachment_image_tag @book.user, :profile_image, :fill, 100,100, format: 'jpeg', fallback: "no_image.jpg" %>
                      <%= @book.user.name %>
                      <% end %>
                      </td>
                      <td><%= @book.title %></td>
                      <td><%= @book.body %></td>
                      <% if current_user.id %>
                      <td class="btn btn-success"><%= link_to "Edit", edit_book_path(@book) %></td>
                      <td class="btn btn-danger"><%= link_to "Destroy", book_path(@book), method: :delete %></td>
                    <% end %>
                    </tr>
				</thead>
			</table>
		</div>
	</div>
  </div>
