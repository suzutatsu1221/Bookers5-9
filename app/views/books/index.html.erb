<% if @book.errors.any? %>
   <p>error</p>
<% end %>

<div clas="container">
	<div class="row col-xs-offset-1">
		<div class="col-xs-3">
				<h2>User</h2>
				 <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
						   <th>name</th>
						   <th><%= current_user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= current_user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<% if current_user.id %>
					<%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench
					 aria-hidden=true" %>
					<% end %>
				</div>
				<h2>New book</h2>
				<!-- form_for部分 -->
				<%= form_for(@book) do |f| %>
				   <h4>Title</h4>
                   <%= f.text_field :title %>
                   <h4>Opinion</h4>
                   <%= f.text_area :body %>
                   <%= f.submit 'Create Book' %>
                <% end %>
				<!--form_for終わり -->
		</div>
		<div class="col-xs-7">
			<h2>Books</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
                <% @books.each do |book| %>
                    <tr>
                      <td><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg" %></td>
                      <td><%= book.title %></td>
                      <td><%= book.body %></td>
                      <td><%= link_to book.title, book_path(book) %></td>
                    </tr>
                <% end %>
				</thead>
			</table>
		</div>
	</div>
  </div>
