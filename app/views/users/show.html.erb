<p><%= notice %></p>

<div clas="container">
	<div class="row col-xs-offset-1">
		<div class="col-xs-3">
				<h2>User info</h2>
				 <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "30×30", fallback: "no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
						   <th>name</th>
						   <th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<% if @user.id == current_user.id %>
					<%= link_to "", edit_user_path, class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench
					 aria-hidden=true" %>
					<% end %>
				</div>
				<h2>New book</h2>
				<!-- form_for部分 -->
				<%= form_for(@book) do |f| %>
				   <h4>Title</h4>
                   <%= f.text_field :title %>
                   <h4>Opinion</h4>
                   <%= f.text_area :body %>
                   <%= f.submit 'Create Book' %>
                <% end %>
				<!--form_for終わり -->
		</div>
		<div class="col-xs-7">
			<h2>Books</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
	                <% @books.each do |book| %>
                    <tr>
					  <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
                      <td><%= book.title %></td>
                      <td><%= book.body %></td>
                    </tr>
                	<% end %>
				</tbody>
			</table>
		</div>
	</div>
  </div>
