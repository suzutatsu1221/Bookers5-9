<div clas="container">
	<div class="row">
		<div class="col-xs-3">
				<h2>User info</h2>
				<table>
					<tbody>
						<tr></tr>
						<tr>
						   <th>name</th>
						   <th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench aria-hidden=true" href="#"></a>
				</div>
				<h2>New book</h2>
				<!-- form_for部分 -->
				<%= form_for(@book) do |f| %>
				   <h4>Title</h4>
                   <%= f.text_field :title %>
                   <h4>Opinion</h4>
                   <%= f.text_area :body %>
                   <%= f.submit 'Update Book' %>
                <% end %>
				<!--form_for終わり -->
		<div class="col-xs-9">
			<h2>Books</h2>
			<table>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
					<% @books.each do |book| %>
                    <tr>
                      <td><%= book.title %></td>
                      <td><%= book.body %></td>
                    </tr>
   n            <% end %>
				</thead>
			</table>
		</div>
	</div>
  </div>
</div>